//Introduction input ///////////////////////////////////////////////

var total = prompt("How many times would you like to flip the coin?", "Text goes here");

if (total != null) {
    console.log("Total coin flips: " + total);
    console.log("=====================");
}

////////////////////////////////////////////////////////////////////

//Math for Heads or Tails///////////////////////////////////////////

heads = 0;
tails = 0;

for (i = 0; i < total; i++) {
  var num = Math.floor(Math.random() * 2);
  if (num === 0)
    heads+=1;
  if (num === 1)
    tails+=1;
}

//Output///////////////////////////////////////////////////////////

console.log('Heads ' + heads);
console.log('Tails ' + tails);
